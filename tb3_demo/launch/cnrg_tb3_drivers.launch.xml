<launch>

  <arg name="launch_r200" default="false"/>
  <arg name="launch_keyboard_io" default="false"/>
  <arg name="launch_app_server" default="true"/>
  <arg name="launch_logitech" default="false"/>
  <arg name="launch_auditory" default="false"/>

  <arg name="camera" default="camera" />
  
  <!-- Realsense r200 camera -->
  <group ns="realsense" clear_params="true">
    <include file="$(find realsense_rgbd_camera)/launch/r200_camera_driver.launch" if="$(arg launch_r200)">
      <arg name="camera" value="$(arg camera)"/>  
    </include>
  </group>

  <!-- Binaural microphone -->
  <include file="$(find binaural_microphone)/launch/basic.launch" if="$(arg launch_auditory)"/>
  <include file="$(find ipem_module)/launch/basic.launch" if="$(arg launch_auditory)"/>

  <!-- Keyboard IO -->
  <include file="$(find keyboard_io)/launch/keyboard_io.launch" if="$(arg launch_keyboard_io)"/>

  <!-- App_server -->
  <include file="$(find tb3_app_server)/launch/basic.launch" if="$(arg launch_app_server)"/>

  <!-- Logitech camera -->
  <group ns="logitech" clear_params="true">
    <node name="usb_cam" pkg="usb_cam" type="usb_cam_node" output="screen" if="$(arg launch_logitech)">
      <param name="video_device" value="/dev/video0" />
      <param name="image_width" value="640" />
      <param name="image_height" value="480" />
      <param name="pixel_format" value="yuyv" />
      <param name="camera_frame_id" value="usb_cam" />
      <param name="io_method" value="mmap"/>
    </node>
  </group>

</launch>
